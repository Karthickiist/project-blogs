<%- include('partials/header') %>

<h1>Home</h1>
<p><%= content %></p>
<button class="compose-button" onclick="window.location.href='/compose'">
    Compose Post
  </button>
  <hr>
<% posts.forEach((element)=>{ %>
    <form action="/delete" method="post">
      <h1><%= element.title %></h1>
      <input type="hidden" name="id" value=<%= element._id %>>
      <p><%= element.post.slice(0,100) %> ... <a href=<%= "/posts/"+ element._id %>>Read More</a>   <button class="btn-delete btn btn-link" type="submit">Delete</button></p>
    </form>
<%}) %>

<%- include('partials/footer') %>